<div>

  <section>
    <header><h3>Pending tasks</h3></header>

    <form ng-submit="ctrl.createTask()">
      <input placeholder="What needs to be done?" autofocus ng-model="ctrl.newTaskText">
    </form>

    <div ng-show="ctrl.taskNotifier.tasks.length" ng-cloak>
      <ul>
        <li ng-repeat="task in ctrl.taskNotifier.tasks">
          <div>
            <input type="checkbox" ng-checked="task.completed" ng-click="ctrl.completeTask(task, $index)">
            <label>{{task.description}}</label>
          </div>
        </li>
      </ul>
    </div>

    <div ng-show="!ctrl.taskNotifier.tasks.length">
      <p>Looks like you're done for the moment!
    </div>
  </section>

  <section ng-show="ctrl.completedTasks.length">
    <header><h3>My completed tasks</h3></header>
    <ul>
      <li ng-repeat="task in ctrl.completedTasks">
        <p>{{task.description}}
      </li>
    </ul>
  </section>

</div>